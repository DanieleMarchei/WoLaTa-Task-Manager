<Window x:Class="WoLaTa_Task_Manager.View.WorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoLaTa_Task_Manager.View"
        xmlns:views ="clr-namespace:WoLaTa_Task_Manager.View"
        mc:Ignorable="d"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="WorkspaceWindow" Height="450" Width="800">
    <Grid MinHeight="450" MinWidth="800" Margin="0,0,-8,-21">
        <StackPanel x:Name="ContainerGrid" Loaded="ContainerGrid_Loaded" Margin="0,0,10,28">
            <DockPanel>
                <TextBox x:Name="WorkspaceLabel" HorizontalAlignment="Left" Text="{Binding Path = Label, Mode = TwoWay}" Height="21" Margin="9,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" />
                <xctk:ColorPicker x:Name="ColorPicker" SelectedColor="{Binding Path = Color, Mode=TwoWay}" Margin="10, 0, 10, 0" Height="20" Width="100" ></xctk:ColorPicker>
                <Button Content="Save" HorizontalAlignment="Left" DockPanel.Dock="Right" Width="75" Click="Button_Click"/>

            </DockPanel>
            <DockPanel MinHeight="398" MinWidth="500">
                <StackPanel x:Name="LanesContainer" VerticalAlignment="Stretch" Background="{Binding ElementName=ColorPicker, Path= SelectedColorText}"  Height="auto" Width="auto"/>
            </DockPanel>

        </StackPanel>
    </Grid>
</Window>
