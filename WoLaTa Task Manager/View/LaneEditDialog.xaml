<Window x:Class="WoLaTa_Task_Manager.View.LaneEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoLaTa_Task_Manager.View"
        mc:Ignorable="d"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Edit Lane" Height="131.564" Width="319.414" ResizeMode="NoResize">
    <Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="53,10,0,0" TextWrapping="Wrap" Text="{Binding Lane.Label}" VerticalAlignment="Top" Width="242"/>

        <Label Content="Color" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <xctk:ColorPicker Margin="53,44,18,25" SelectedColor="{Binding Lane.Color}"/>
    </Grid>
</Window>
