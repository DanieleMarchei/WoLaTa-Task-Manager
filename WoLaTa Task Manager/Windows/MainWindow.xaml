<Window x:Class="WoLaTa_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoLaTa_Task_Manager.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <Label Content="WoLaTa Task Manager" HorizontalAlignment="Center" FontSize="30"></Label>
    
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        
        
            <Button x:Name="CreateBtn" Content="Create" Height="50" Width="100" Margin="40" Click="CreateBtn_Click"></Button>
            <Button x:Name="LoadBtn" Content="Load" Height="50" Width="100" Margin="40" Click="LoadBtn_Click"></Button>
        </StackPanel>
        <!--<Popup x:Name="CreatePopup" IsOpen="True" Placement="Center">
            <TextBox x:Name="WorkspaceLabel" Text="Enter workspace name..."></TextBox>
            <Button x:Name="ChooseFolder" Content="Choose folder..." Click="ChooseFolder_Click"></Button>
        </Popup>-->
    </StackPanel>
</Window>
